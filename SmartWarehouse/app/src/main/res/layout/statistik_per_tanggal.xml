<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.StatistikPerTanggal">

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Spinner
            android:id="@+id/stat_spinner1"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lap_bln_text2"
            android:layout_toStartOf="@+id/stat_spinner3"
            android:backgroundTint="#2ecc71"
            android:entries="@array/android_dropdowntgl"
            android:padding="5dp" />

        <Spinner
            android:id="@+id/stat_spinner2"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lap_bln_text3"
            android:layout_alignBottom="@+id/lap_bln_text2"
            android:backgroundTint="#2ecc71"
            android:entries="@array/android_dropdownbln"
            android:padding="5dp" />

        <Spinner
            android:id="@+id/stat_spinner3"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lap_bln_text3"
            android:layout_alignBottom="@+id/lap_bln_text2"
            android:backgroundTint="#2ecc71"
            android:entries="@array/android_dropdownthn"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="331dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_1"
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="215dp">

        </com.github.mikephil.charting.charts.BarChart>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="331dp"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="191dp"
            android:layout_alignStart="@+id/chart_1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="100dp" />

    </LinearLayout>

</LinearLayout>