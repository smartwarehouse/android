<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/barang_linear1"
        android:layout_width="331dp"
        android:layout_height="193dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/barang_linear2"
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginTop="60dp">

            <android.support.v7.widget.CardView
                android:id="@+id/barang_card1"
                android:layout_width="142dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/barang_linear3"
                    android:layout_width="142dp"
                    android:layout_height="202dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/barang_image1"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/shopping" />

                    <TextView
                        android:id="@+id/barang_text1"
                        android:layout_width="150dp"
                        android:layout_height="46dp"
                        android:layout_alignBottom="@+id/barang_card1"
                        android:layout_gravity="center"
                        android:text="Tambah Barang"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/barang_card2"
                android:layout_width="141dp"
                android:layout_height="160dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/barang_linear4"
                    android:layout_width="141dp"
                    android:layout_height="202dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/barang_image2"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/archive" />

                    <TextView
                        android:id="@+id/barang_text2"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_alignBottom="@+id/barang_card2"
                        android:layout_gravity="center"
                        android:text="Daftar Barang"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/barang_linear5"
        android:layout_width="331dp"
        android:layout_height="193dp"
        android:layout_gravity="center"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/barang_linear6"
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="135dp"
            android:layout_marginStart="3dp">

            <android.support.v7.widget.CardView
                android:id="@+id/barang_card3"
                android:layout_width="143dp"
                android:layout_height="169dp"
                android:layout_marginBottom="110dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="1dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/barang_linear7"
                    android:layout_width="142dp"
                    android:layout_height="202dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/barang_image3"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/packagee" />

                    <TextView
                        android:id="@+id/barang_text3"
                        android:layout_width="179dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Barang Return"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/barang_card4"
                android:layout_width="143dp"
                android:layout_height="169dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/barang_card2"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/barang_linear8"
                    android:layout_width="142dp"
                    android:layout_height="202dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/barang_image4"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:src="@drawable/question" />

                    <TextView
                        android:id="@+id/barang_text4"
                        android:layout_width="158dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:text="Barang Kosong"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>